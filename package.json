{
  "name": "tottrots-game-refactored",
  "version": "1.0.0",
  "description": "A comprehensive game architecture refactoring project featuring modular design, cross-cutting concerns integration, and advanced accessibility features",
  "main": "src/GameRefactored.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js --dev",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/main.css -o dist/styles.css",
    "build:js": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,css,html} tests/**/*.js",
    "format:check": "prettier --check src/**/*.{js,css,html} tests/**/*.js",
    "accessibility": "axe-core --url http://localhost:3000",
    "docs": "jsdoc -c jsdoc.conf.json",
    "serve": "http-server dist -p 3000 -c-1",
    "clean": "rimraf dist",
    "ci:lint": "npm run lint",
    "ci:test": "npm run test:ci",
    "ci:build": "npm run build",
    "ci:format": "npm run format:check",
    "ci:all": "npm run ci:format && npm run ci:lint && npm run ci:test && npm run ci:build",
    "precommit": "npm run ci:all",
    "prepush": "npm run ci:all",
    "validate": "npm run format:check && npm run lint && npm run test:ci",
    "validate:implementation": "node validate-implementation.js",
    "validate:all": "npm run validate && npm run validate:implementation"
  },
  "keywords": [
    "game",
    "architecture",
    "refactoring",
    "accessibility",
    "modular",
    "dependency-injection",
    "event-driven",
    "achievements",
    "daily-challenges"
  ],
  "author": "Game Refactoring Project",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.7.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdoc": "^4.0.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.3.0",
    "rollup-plugin-copy": "^3.5.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
